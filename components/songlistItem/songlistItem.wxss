.wrapper {
  position: relative;
  padding-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  margin-left: -24rpx;
  margin-top: -24rpx;
  overflow: hidden;
}

.bgcover {
  margin-top: -70rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: -1;
  background-color: rgba(0, 0, 0, .5);
  backdrop-filter: blur(5px);
}

.wrapper .bgcover .ima {
  width: 100%;
  height: 100%;
  background-color: black;
  filter: blur(10rpx);
  opacity: 0.5;
}

.inner {
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 100%;
}

.top {
  width: 90%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cover {
  width: 250rpx;
  height: 250rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.cover .image {
  width: 100%;
}

.info {
  width: 350rpx;
  font-size: 30rpx;
  color: aliceblue;
  font-weight: 800;
}

.category {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
}

.avatar {
  overflow: hidden;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.avatar .image {
  width: 100%;
}

.nickname {
  margin-left: 18rpx;
}

.interdus {
  font-size: 25rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  border-radius: 15rpx;
  background-color: rgba(112, 112, 112, 0.5);
  margin-top: 20rpx;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bottom {
  margin-top: 50rpx;
  width: 90%;
  align-items: center;
  justify-content: space-around;
  display: flex;
}

.bottom .item .image {
  width: 100%;
}

.bottom .count {
  display: flex;
  width: 180rpx;
}

.bottom .count .image {
  width: 50rpx;
}

.bottom .search .image {
  width: 50rpx;
}

.subscribedCount {
  margin-left: 20rpx;
}

.search {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 180rpx;
}

.searchtext {
  margin-left: 20rpx;
}