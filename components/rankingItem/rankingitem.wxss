/* components/rankingItem/rankingitem.wxss */
.rankingItemWrapper{
  margin-top: 30rpx;
}
.rankingItemWrapper .title{
  font-size: 40rpx;
  font-weight: 545;
}
.rankingItemWrapper .list{
  display: flex;
  justify-content: space-between;
}
.rankingItemWrapper .list .info{
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  justify-content: center;
}
.rankingItemWrapper .list .info .infoinner {
  display: flex;
  margin-top: 15rpx;
}
.rankingItemWrapper .list .info .infoinner .songname{
  margin-left: 15rpx;
}
.rankingItemWrapper .list .cover{
  position: relative;
  flex-shrink: 0;
  width: 220rpx;
}
.rankingItemWrapper .list .cover .playcount{
  color: rgb(255, 255, 255);
  padding-left: 9rpx;
  padding-right: 9rpx;
  padding-top: 4rpx;
  padding-bottom: 4rpx;
  position: absolute;
  bottom: 14rpx;
  right: 6rpx;
  background-color: rgba(53, 54, 54, 0.7);
  border-radius: 12rpx
}
.rankingItemWrapper .list .cover image{
  width: 100%;
}