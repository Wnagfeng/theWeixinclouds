<view class="wrapper">
  <view class="bgcover">
    <image class="image" src="{{palysonginfo.al.picUrl}}" mode="aspectFill" />
  </view>
  <view class="state" style="height: {{statusBarHeight}}px"></view>
  <navBar>
    <view slot="left">
      <van-icon name="arrow-left" class="icon" />
    </view>
    <view slot="center">
      <view class="tabs">
        <view class="item  {{cureentpageindex===0 ?'active' :''}}" bindtap="onnavtabitem" data-index="{{0}}">
          歌曲
        </view>
        <view class="centericon">|</view>
        <view class="item {{cureentpageindex ===1 ?'active':''}}" bindtap="onnavtabitem" data-index="{{1}}">
          歌词
        </view>
      </view>
    </view>
  </navBar>
  <swiper bindchange="onswiperchange" style="height: {{currentpageheight}}px " current="{{cureentpageindex}}">
    <swiper-item class="music">
      <view class="album">
        <image class="image" src="{{palysonginfo.al.picUrl}}" mode="widthFix" />
      </view>
      <view class="info">
        <view class="name">{{palysonginfo.name}}</view>
        <view class="singer">{{palysonginfo.ar[0].name}}</view>
      </view>
      <view class="lyric">门前大桥下游过一群鸭？？？</view>
      <view class="proress">
        <slider block-size="15"></slider>
        <view class="time">
          <view class="cureent">03:22</view>
          <view class="duration">04:44</view>
        </view>
      </view>
      <view class="control">
        <image class="btn mode" src="/assets/images/player/play_order.png" mode="" />
        <image class="btn prev" src="/assets/images/player/play_prev.png" mode="" />
        <image class="btn play" src="/assets/images/player/play_pause.png" mode="" />
        <image class="btn next" src="/assets/images/player/play_next.png" mode="" />
        <image class="btn list" src="/assets/images/player/play_music.png" mode="" />
      </view>
    </swiper-item>
    <swiper-item>
      歌词
    </swiper-item>
  </swiper>
</view>